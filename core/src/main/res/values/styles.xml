<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VacancyBodyTextStyle" parent="VacancyTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="VacancyTitleTextStyle" parent="VacancyBodyTextStyle">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="VacancyPublishedDateTextStyle" parent="VacancyBodyTextStyle">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="VacancyLookingNumberTextStyle" parent="VacancyBodyTextStyle">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="VacancyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_20</item>
    </style>

    <style name="VacancyImageStyle">
        <item name="android:layout_width">@dimen/dm_20</item>
        <item name="android:layout_height">@dimen/dm_20</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="VacancyCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/dm_15</item>
        <item name="android:backgroundTint">@color/medium_gray</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/dm_296</item>
        <item name="android:layout_height">@dimen/dm_40</item>
        <item name="android:padding">@dimen/dm_10</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_round</item>
    </style>

    <style name="GeneralTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>