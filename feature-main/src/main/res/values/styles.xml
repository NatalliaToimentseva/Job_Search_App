<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OffersTextStyle" parent="OffersTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="OffersTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_8</item>
        <item name="android:layout_marginVertical">@dimen/dm_5</item>
    </style>

    <style name="OffersImageStyle">
        <item name="android:layout_width">@dimen/dm_32</item>
        <item name="android:layout_height">@dimen/dm_32</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_8</item>
        <item name="android:layout_marginVertical">@dimen/dm_10</item>
        <item name="android:background">@drawable/icon_rounded_background_green</item>
        <item name="android:padding">@dimen/dm_5</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="OffersCardStyle">
        <item name="android:layout_width">@dimen/dm_132</item>
        <item name="android:layout_height">@dimen/dm_120</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_5</item>
        <item name="android:backgroundTint">@color/medium_gray</item>
    </style>

    <style name="MainScreenButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">@dimen/dm_320</item>
        <item name="android:layout_height">@dimen/dm_48</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/button_background_rectangular</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/dm_10</item>
        <item name="android:layout_marginStart">@dimen/dm_10</item>
        <item name="android:background">@drawable/lite_rounded_background</item>
        <item name="android:padding">@dimen/dm_10</item>
    </style>

    <style name="VacancyBlockTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm_20</item>
        <item name="android:layout_marginBottom">@dimen/dm_5</item>
        <item name="android:layout_marginStart">@dimen/dm_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="OffersRecycleViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dm_120</item>
        <item name="android:layout_marginVertical">@dimen/dm_15</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="MainSearchViewStyle">
        <item name="android:layout_width">@dimen/dm_0</item>
        <item name="android:layout_height">@dimen/dm_40</item>
        <item name="android:layout_marginVertical">@dimen/dm_10</item>
        <item name="android:layout_marginEnd">@dimen/dm_10</item>
        <item name="android:background">@drawable/lite_rounded_background</item>
        <item name="android:inputType">none</item>
        <item name="android:theme">@style/SearchView</item>
    </style>

    <style name="BackSearchView">
        <item name="android:layout_width">@dimen/dm_0</item>
        <item name="android:layout_height">@dimen/dm_40</item>
        <item name="android:layout_marginVertical">@dimen/dm_10</item>
        <item name="android:layout_marginEnd">@dimen/dm_10</item>
        <item name="android:background">@drawable/lite_rounded_background</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">@dimen/dm_10</item>
        <item name="android:theme">@style/SearchView</item>
    </style>

</resources>